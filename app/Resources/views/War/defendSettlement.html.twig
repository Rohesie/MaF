{% extends "layout.html.twig" %}

{% block content %}
	<h2>{{ "military.settlement.defend.name"|trans({},"actions")|title }}</h2>
	{% if result is defined %}
		<p>
		{% if result.success %}
			{% if result.immediate %}
				{{ "military.settlement.defend.success"|trans({}, "actions")|raw }}
			{% else %}
				{{ "military.settlement.defend.queued"|trans({}, "actions")|raw }}
			{% endif %}
		{% else %}
			{{ result.message|trans({},"actions") }}
		{% endif %}
		</p>
	{% else %}
		<p>{{ "military.settlement.defend.intro"|trans({"%settlement%":link(settlement)},"actions")|raw }}</p>
		{{ form(form) }}
	{% endif %}

{% endblock %}
