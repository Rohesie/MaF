{% extends "layout.html.twig" %}

{% block content %}
	<h2>{{ "military.block.name"|trans({},"actions")|title }}</h2>
	{% if result is defined %}
		<p>
		{% if result.success %}
			{{ "military.block.success"|trans({},"actions")|raw }}
		{% else %}
			{{ result.message|trans({},"actions") }}
		{% endif %}
		</p>
	{% else %}
		<p>{{ "military.block.intro"|trans({"%listsurl%":path('bm2_lists')},"actions")|raw }}</p>
		{{ form(form) }}
	{% endif %}

{% endblock %}

{% block jquery %}
{% include "element/autocomplete.js.twig" %}
charselect($("input[id$='_targetCharacter']"));
realmselect($("input[id$='_targetRealm']"));
{% endblock %}
