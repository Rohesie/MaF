{% extends "layout.html.twig" %}

{% block includes %}
	{{ parent() }}
	<script src="{{ asset('bundles/bm2site/js/flot/jquery.flot.min.js') }}"></script>
	<script src="{{ asset('bundles/bm2site/js/flot/jquery.flot.stack.min.js') }}"></script>
	<script src="{{ asset('bundles/bm2site/js/flot/jquery.flot.selection.min.js') }}"></script>
{% endblock %}

{% block content %}
<h2>Battle Statistics</h2>
<div id="graph" style="width: 100%; height: 32em"></div>
<div id="overview" style="width: 100%; height: 20em"></div>

{% endblock %}

{% block jquery %}
var options = {
	series: {
		stack: true,
		bars: {
			show: true,
			barWidth: 0.75
		}
	},
	legend: {
			position: "nw"
	},
	grid: {
	    backgroundColor: { colors: ["#fff", "#ddd"] }
	},
	selection: {
		mode: "xy"
	}
};

var data = [
	{% for row in data %}
		{{ row|json_encode|raw }}{% if not loop.last %}, {% endif %}
	{% endfor %}
];

var plot = $.plot($("#graph"), data, options );
var overview = $.plot($("#overview"), data, options );

$("#graph").bind("plotselected", function (event, ranges) {
	plot = $.plot($("#graph"), data, $.extend(true, {}, options, {
		xaxis: {
			min: ranges.xaxis.from,
			max: ranges.xaxis.to
		},
		yaxis: {
			min: ranges.yaxis.from,
			max: ranges.yaxis.to
		}
	}));
	overview.setSelection(ranges, true);
});

$("#overview").bind("plotselected", function (event, ranges) {
	plot.setSelection(ranges);
});

{% endblock %}
