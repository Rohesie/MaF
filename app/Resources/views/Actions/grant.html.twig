{% extends "layout.html.twig" %}

{% block content %}
	<h2>{{ "control.grant.name"|trans({},"actions")|title }}</h2>
	{% if result is defined %}
		<p>
		{% if result.success %}
			{% if result.immediate %}
				{{ "control.grant.success"|trans({"%newowner%":link(newowner)},"actions")|raw }}
			{% else %}
				{{ "control.grant.queued"|trans({"%newowner%":link(newowner)},"actions")|raw }}
			{% endif %}
		{% else %}
			{{ result.message|trans({},"actions") }}
		{% endif %}
		</p>
	{% else %}
		<p>{{ "control.grant.intro"|trans({},"actions")|raw}}</p>
		{% if settlement.realm %}
			<p>{{ "control.grant.introwr"|trans({},"actions")|raw}}</p>
		{% endif %}
		{{ form(form) }}
	{% endif %}

{% endblock %}
