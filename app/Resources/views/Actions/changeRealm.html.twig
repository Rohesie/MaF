{% extends "layout.html.twig" %}

{% block content %}
	<h2>{{ "control.changerealm.name"|trans({},"actions")|title }}</h2>

	{% if result is defined %}
		<p>
		{% if result.success %}
			<p>{{ "control.changerealm.success"|trans({"%newrealm%":link(newrealm)},"actions")|raw }}</p>
			{% if result.leaving is defined %}
				<p>{{ "control.changerealm.leftrealm"|trans({"%oldrealm%":link(result.leaving)},"actions")|raw }}</p>
			{% endif %}
		{% else %}
			{{ result.message|trans({},"actions") }}
		{% endif %}
		</p>
	{% else %}
		<p>{{ "control.changerealm.intro"|trans({"%settlement%":link(settlement)},"actions")|raw}}</p>
		{% if settlement.realm %}
			<p>{{ "control.changerealm.current"|trans({"%settlement%":link(settlement), "%realm%":link(settlement.realm)},"actions")|raw}}</p>
		{% else %}
			<p>{{ "control.changerealm.nocurrent"|trans({"%settlement%":link(settlement)},"actions")|raw}}</p>
		{% endif %}

		{{ form(form) }}
	{% endif %}

{% endblock %}
