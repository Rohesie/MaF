{% extends "layout.html.twig" %}

{% block content %}
	<h2>{{ "location.givegold.name"|trans({},"actions")|title }}</h2>
	{% if success is defined %}
		{{ "location.givegold.success"|trans({"%amount%":amount, "%target%":target.name},"actions")|raw }}
	{% else %}
		<p>{{ "location.givegold.intro"|trans({"%gold%":gold},"actions")|raw }}</p>
		{{ form(form) }}
	{% endif %}

{% endblock %}
