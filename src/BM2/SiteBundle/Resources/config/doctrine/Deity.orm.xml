<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping>
	<entity name="BM2\SiteBundle\Entity\Diety">
		<id name="id" type="integer">
			<generator strategy="IDENTITY"/>
		</id>
		<field name="name" type="string"/>
		<many-to-one field="association" target-entity="Association" inversed-by="deities"/>
		<many-to-one field="deity" target-entity="Deity" inversed-by="association"/>
		<one-to-many field="main_recognizer" target-entity="Association" inversed-by="recognized_deities"/>
		<one-to-many field="descriptions" target-entity="Description" mapped-by="deity"/>
		<one-to-one field="description" target-entity="Description" mapped-by="active_deity" fetch="EAGER"/>
	</entity>
</doctrine-mapping>
